<script Language="JavaScript">
function Imprimir(){
window.print();
}
</script>
<style media="print">
.botao {
display: none;
}
</style>

<div id="conteudo">
 <h2 align="center">Termo de Desistência</h2>
  <input type="Button" Value="Imprimir" onclick="Imprimir()" class="botao">
  <fieldset>
    <legend><font size=4>Dados da Criança</font></legend>
    <font size=3>
    <b>Id:</b>
      <%=h @crianca.id %><br />
    <b>Nome:</b>
      <%=h @crianca.nome %><br />
    <b>Nascimento:   </b>
      <%=h @crianca.nascimento.strftime("%d/%m/%y")%> <br />
    <b>Nome da mãe:</b>
      <%=h @crianca.mae %><br />
    <b>Possui irmão(s)</b>
    <%=h @crianca.gemeos %> -<%=h @crianca.obs_irmao%>  <br />
    <b>Classificação:</b>
      <%=h @crianca.grupo.nome + ' - ' %>
      <%=h @crianca.grupo.descricao	%> <br />
    <b>Endereço:      </b>
      <%=h @crianca.endereco%>
      <%=h @crianca.numero%>  -
      <%=h @crianca.complemento%> <br />
    <b>Bairro:        </b>
      <%=h @crianca.bairro%> <br />
    <b>Telefone Residencial:    </b>
      <%=h @crianca.tel1%> <br />
    <b>Telefone Recado:    </b>
      <%=h @crianca.tel2%> <br />
    <b>Nome (recado):    </b>
      <%=h @crianca.nomerecado%> <br />
    <b>Celular:       </b>
      <%=h @crianca.celular%> <br/>
    <b>Filho de servidor: </b>
      <% if @crianca.servidor_publico == false then %>
        NÃO
      <%else%>
        SIM
      <%end%>
      <br/>
    <b>Possui necessidade especial?</b>
      <%if @crianca.n_especial == true then%>
        <%=h "SIM" %><br/>
         <b>Descricao Necessidade</b>
        <%=h @crianca.necessidade %>
      <%else%>
        NÃO POSSUI
      <%end%>
      <BR/>
    <b>Foi transferido?: </b>
      <%if @crianca.transferencia == true then%>
        <%=h "SIM" %><br/>
       <b>Observações</b>
        <%=h @crianca.obs_transf %>
      <%else%>
        NUNCA FOI TRANSFERIDO.
      <%end%>

   </font>
  </fieldset>


  <font size="3"><u><b>IMPORTANTE</b></u></font><br/>
  <font size="2"> Fica registrado que o responsável <%= @crianca.nome_responsavel %> solicitou a desistência para a vaga. . <br/></font>
  <br/>
  Ciente:
  <br/>
  <br/>
  <table width="100%">
    <tr>
      <td align="center">___________________________________</td>
      <td align="center">___________________________________</td>
    </tr>
    <tr>
      <td align="center"> Assinatura do responsável               </td>
      <td align="center"> Assinatura diretor(a)              </td>
    </tr>
  </table>
  <br/>
  <%= link_to 'Voltar', root_path, :class =>"botao3d" %>|
</div>





